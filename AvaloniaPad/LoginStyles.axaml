<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
  <Design.PreviewWith>
    <Border Padding="20" Background="#CCC">
		<StackPanel>
			<TextBox Classes="LoginTextbox" Margin="0 20 0 20" Watermark="Username" />
			<Button Classes="LoginButton" Content="Login" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" />
		</StackPanel>
	</Border>
  </Design.PreviewWith>

	<Style Selector="TextBox.LoginTextbox:focus">
		<Setter Property="BorderBrush" Value="White"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Background" Value="Blue"/>
	</Style>
	<Style Selector="TextBox.LoginTextbox:focus">
		<Setter Property="Foreground" Value="White" />
	</Style>
	<Style Selector="TextBox.LoginTextbox:focus">
		<Setter Property="Foreground" Value="White" />
	</Style>

	<Style Selector="Button.LoginButton">
		<Setter Property="Background" Value="#003554" />
		<Setter Property="Foreground" Value="#FFF" />
	</Style>
	<Style Selector="Button.LoginButton:pointerover">
		<Setter Property="Background" Value="#00409f" />
		<Setter Property="BorderBrush" Value="#000" />
		<Setter Property="Cursor" Value="Hand" />
	</Style>
	
</Styles>